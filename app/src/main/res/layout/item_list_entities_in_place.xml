<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="7dp"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="4dp">

    <LinearLayout
        android:id="@+id/container_view"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="4dp"
        android:gravity="center_horizontal">

        <LinearLayout
            android:id="@+id/edit_place_name_container"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="1dp"
            android:layout_marginRight="2dp"
            android:layout_marginEnd="2dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_person"
                android:tint="@color/colorAccent"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"/>

            <EditText
                android:id="@+id/edit_entity_name"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                style="@style/edit_text_form" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/edit_place_phone_container"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="1dp"
            android:layout_marginRight="2dp"
            android:layout_marginEnd="2dp"
            android:gravity="center_vertical">

            <ImageView
                 android:layout_width="wrap_content"
                 android:layout_height="match_parent"
                 android:src="@mipmap/ic_smartphone"
                 android:tint="@color/colorAccent"
                 android:paddingTop="8dp"
                 android:paddingBottom="8dp"/>

            <EditText
                android:id="@+id/edit_entity_country_phone"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_width="0dp"
                android:layout_weight="0.2"
                android:text="+55"
                android:layout_height="wrap_content"
                style="@style/edit_text_form"
                android:enabled="false" />

            <EditText
                 android:id="@+id/edit_entity_phone"
                 android:layout_marginStart="3dp"
                 android:layout_marginLeft="3dp"
                 android:layout_width="0dp"
                 android:layout_weight="1"
                 android:layout_height="wrap_content"
                 style="@style/edit_text_form"
                 android:inputType="phone" />

         </LinearLayout>

        <LinearLayout
            android:id="@+id/edit_place_address_container"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="1dp"
            android:layout_marginRight="2dp"
            android:layout_marginEnd="2dp"
            android:gravity="center_vertical">

            <ImageView
                 android:layout_width="wrap_content"
                 android:layout_height="match_parent"
                 android:src="@mipmap/ic_place"
                 android:tint="@color/colorAccent"
                 android:paddingTop="8dp"
                 android:paddingBottom="8dp"/>

            <EditText
                 android:id="@+id/edit_place_address"
                 android:layout_marginStart="8dp"
                 android:layout_marginLeft="8dp"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 style="@style/edit_text_form"
                 android:enabled="false"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/edit_place_school_container"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="1dp"
            android:layout_marginRight="2dp"
            android:layout_marginEnd="2dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@mipmap/ic_school"
                android:tint="@color/colorAccent"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"/>

            <EditText
                android:id="@+id/edit_place_school"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/edit_text_form" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btn_split"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="@color/colorAccent"
                android:textColor="@android:color/white"
                android:text="@string/btn_split"/>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@android:color/darker_gray"/>

            <Button
                android:id="@+id/btn_delete"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="@color/material_red"
                android:textColor="@android:color/white"
                android:text="@string/btn_delete"/>

        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>