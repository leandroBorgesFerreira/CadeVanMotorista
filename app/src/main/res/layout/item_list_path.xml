<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    android:id="@+id/container_view_path"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="10dp"
    android:layout_marginLeft="6dp"
    android:layout_marginRight="6dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/path_direction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/TextAppearance.AppCompat.Body1"
            android:padding="1dp"
            android:textStyle="bold"
            android:background="#22000000"
            android:gravity="center"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="60dp">

            <TextView
                android:id="@+id/path_name"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center"
                style="@style/TextAppearance.AppCompat.Body1"
                android:transitionName="toolbar"/>

            <ImageButton
                android:id="@+id/path_share"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@mipmap/ic_share"
                android:tint="@color/colorAccent"
                android:background="@drawable/button_shape_no_brackground"
                android:visibility="gone"
                android:padding="14dp"/>

            <ImageButton
                android:id="@+id/path_start"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@mipmap/ic_flag"
                android:tint="@color/colorAccent"
                android:background="@drawable/button_shape_no_brackground"
                android:padding="14dp"/>

        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>